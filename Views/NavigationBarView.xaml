<UserControl x:Class="Industrial_Monitor_WPF_Modbus.Views.NavigationBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Industrial_Monitor_WPF_Modbus.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <materialDesign:ColorZone Grid.Column="0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Stretch"
                              CornerRadius="15"
                              Mode="PrimaryMid"
                              Padding="15"
                              Margin="20">
        <DockPanel LastChildFill="False">
            <Grid DockPanel.Dock="Top">
                <Border BorderBrush="#66F0F8FF"
                        BorderThickness="1"
                        CornerRadius="10">
                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Padding="0"
                            Width="30"
                            Margin="2">
                        <materialDesign:PackIcon Kind="BellOutline"
                                                 Width="20"
                                                 Height="20"
                                                 HorizontalAlignment="Center" />
                    </Button>
                </Border>
            </Grid>
            <Border BorderBrush="#66F0F8FF"
                    BorderThickness="0,0,0,1"
                    Margin="0,10,0,0"
                    DockPanel.Dock="Top" />
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Top">
                <materialDesign:PackIcon Kind="HomeVariant"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Top">
                <materialDesign:PackIcon Kind="HomeVariant"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Top">
                <materialDesign:PackIcon Kind="HomeVariant"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Top">
                <materialDesign:PackIcon Kind="HomeVariant"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Top">
                <materialDesign:PackIcon Kind="HomeVariant"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButton}"
                         Padding="0"
                         Margin="0,10"
                         DockPanel.Dock="Bottom">
                <materialDesign:PackIcon Kind="Export"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Center" />
            </RadioButton>
        </DockPanel>
    </materialDesign:ColorZone>
</UserControl>
