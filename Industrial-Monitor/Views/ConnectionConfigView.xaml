<UserControl x:Class="Industrial_Monitor.Views.ConnectionConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Industrial_Monitor.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Border Background="AliceBlue">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="通信参数设置"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Grid.Row="0"
                       Margin="0,40,0,20" />
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,20">
                <TextBlock Text="Ip地址:"
                           FontSize="15"
                           Margin="0,0,35,0"
                           VerticalAlignment="Center" />
                <TextBox Style="{StaticResource MaterialDesignTextBox}"
                         Width="150"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="127.0.0.0"
                         Text="{Binding ConnectionParameters.IpAddress}"/>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,20">
                <TextBlock Text="端口号:"
                           FontSize="15"
                           Margin="0,0,35,0"
                           VerticalAlignment="Center" />
                <TextBox Style="{StaticResource MaterialDesignTextBox}"
                         Width="150"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="502"
                         Text="{Binding ConnectionParameters.Port}"/>
            </StackPanel>
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        Margin="0,0,0,20">
                <TextBlock Text="超时时间:"
                           FontSize="15"
                           Margin="0,0,20,0"
                           VerticalAlignment="Center" />
                <TextBox Style="{StaticResource MaterialDesignTextBox}"
                         Width="150"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="ms"
                         Text="{Binding ConnectionParameters.Timeout}"/>
            </StackPanel>
            <StackPanel Grid.Row="4"
                        Margin="0,0,0,20"
                        Orientation="Horizontal">
                <TextBlock Text="重连次数:"
                           FontSize="15"
                           Margin="0,0,20,0"
                           VerticalAlignment="Center" />
                <TextBox Style="{StaticResource MaterialDesignTextBox}"
                         Width="150"
                         VerticalAlignment="Center"
                         Text="{Binding ConnectionParameters.RetryCount}"/>
            </StackPanel>
            <DockPanel Grid.Row="5"
                       LastChildFill="False">
                <Button Content="确定"
                        DockPanel.Dock="Right"
                        Width="60"
                        Margin="5"
                        Command="{Binding SaveCommand}"/>
                <Button Content="取消"
                        DockPanel.Dock="Right"
                        Width="60"
                        Margin="5"
                        Background="#c62828"
                        Command="{Binding CloseDrawerCommand}"/>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
