<UserControl x:Class="Industrial_Monitor.Views.CommunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Industrial_Monitor.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="通信设置"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10" />
            <Border Height="1"
                    Background="Black"
                    Grid.Column="1"
                    Margin="10"
                    VerticalAlignment="Center" />
        </Grid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Cursor="">
            <TextBlock Text="协议类型"
                       FontSize="15"
                       Margin="10" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButtonRight}"
                         Content="TCP" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButtonLeft}"
                         Content="RTU" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <TextBlock Text="断开"
                       FontSize="15"
                       Margin="10"
                       VerticalAlignment="Center" />
            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          Width="40"
                          VerticalAlignment="Center" />
            <TextBlock Text="连接"
                       FontSize="15"
                       Margin="10"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
