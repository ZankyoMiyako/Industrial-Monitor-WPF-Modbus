<UserControl x:Class="Industrial_Monitor.Views.RequestConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Industrial_Monitor.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Grid.Row="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Margin="10"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Text="请求设置" />
            <Border Grid.Column="1"
                    Height="1"
                    Margin="10"
                    VerticalAlignment="Center"
                    Background="Black" />
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Margin="10"
                       FontSize="15"
                       Text="从站地址:" />
            <TextBox MinWidth="123"
                     Margin="25,0,0,0"
                     VerticalAlignment="Center"
                     Style="{StaticResource MaterialDesignTextBox}"
                     Text="{Binding SlaveId}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Margin="10"
                       FontSize="15"
                       Text="功能码:" />
            <ComboBox MinWidth="123"
                      Margin="40,0,0,0"
                      VerticalAlignment="Center"
                      DisplayMemberPath="Value"
                      ItemsSource="{Binding AvailableFunctionCodes}"
                      SelectedValue="{Binding FunctionCodeSelected}"
                      SelectedValuePath="Key" />
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock Margin="10"
                       FontSize="15"
                       Text="起始地址:" />
            <TextBox MinWidth="123"
                     Margin="25,0,0,0"
                     VerticalAlignment="Center"
                     Style="{StaticResource MaterialDesignTextBox}"
                     Text="{Binding StartAddress}" />
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock Margin="10"
                       FontSize="15"
                       Text="数量:" />
            <TextBox MinWidth="123"
                     Margin="55,0,0,0"
                     VerticalAlignment="Center"
                     Style="{StaticResource MaterialDesignTextBox}"
                     Text="{Binding Count}" />
        </StackPanel>
        <Button Grid.Row="5"
                Margin="10"
                HorizontalAlignment="Right"
                Command="{Binding ApplyCommand}"
                Content="生成看板" />
    </Grid>
</UserControl>
