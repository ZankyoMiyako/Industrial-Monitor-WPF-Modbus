<UserControl x:Class="Industrial_Monitor.Views.RequestConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Industrial_Monitor.Views"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="请求设置"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="10"
                       Grid.Column="0"
                       VerticalAlignment="Center" />
            <Border Height="1"
                    Background="Black"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="10" />
        </Grid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock Text="从站地址:"
                       Margin="10"
                       FontSize="15" />
            <TextBox Text="1"
                     VerticalAlignment="Center"
                     Margin="25,0,0,0"
                     MinWidth="123"
                     Style="{StaticResource MaterialDesignTextBox}" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <TextBlock Text="功能码:"
                       Margin="10"
                       FontSize="15" />
            <ComboBox VerticalAlignment="Center"
                      Margin="40,0,0,0"
                      MinWidth="123"
                      SelectedIndex="2">
                <ComboBoxItem>01</ComboBoxItem>
                <ComboBoxItem>02</ComboBoxItem>
                <ComboBoxItem>03</ComboBoxItem>
                <ComboBoxItem>04</ComboBoxItem>
                <ComboBoxItem>05</ComboBoxItem>
                <ComboBoxItem>06</ComboBoxItem>
                <ComboBoxItem>15</ComboBoxItem>
                <ComboBoxItem>16</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal">
            <TextBlock Text="起始地址:"
                       Margin="10"
                       FontSize="15" />
            <TextBox Text="0"
                     VerticalAlignment="Center"
                     Margin="25,0,0,0"
                     MinWidth="123"
                     Style="{StaticResource MaterialDesignTextBox}" />
        </StackPanel>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal">
            <TextBlock Text="数量:"
                       Margin="10"
                       FontSize="15" />
            <TextBox Text="10"
                     VerticalAlignment="Center"
                     Margin="55,0,0,0"
                     MinWidth="123"
                     Style="{StaticResource MaterialDesignTextBox}" />
        </StackPanel>
        <Button Grid.Row="5"
                Content="生成看板"
                Margin="10"
                HorizontalAlignment="Right" />
    </Grid>
</UserControl>
